//Enemies

let goblins = [];
let goblinSize = 30;
let numGoblins = 7;

//sprite variables
let goblinSprite;


function preload() {
    goblinSprite = loadImage("goblin1.png");
    
}

function setup() {
    createCanvas(500, 500);
    
    

    
    for (let enemyCount = 0; enemyCount < numGoblins; enemyCount++) {
        goblins[enemyCount] = new Goblin(goblinSprite,
                                        random(0, width),
                                        random(0, height),
                                        goblinSize)
    }
}

function draw() {
    background(245);

    

   
    for (let enemyCount = 0; enemyCount < numGoblins; enemyCount++) {
        goblins[enemyCount].display();
    }
}   

class Goblin {
    constructor(sprite, x, y, size, speed) {
        this.sprite = sprite;
        this.x = x;
        this.y = y;
        this.targetX = 8;
		this.targetY = 8;
        this.size = 100, 100;
        this.speed = 1
    }

    display() {
        image(this.sprite, this.x, this.y, this.size);
        this.update();
    
}


       update() {
        // Handle goblin movement on the x-axis
        if (this.x < this.targetX) {
            this.x += this.speed; // Move right
        } else if (this.x > this.targetX) {
            this.x -= this.speed; // Move left
        }
    

        // Handle goblin movement on the y-axis
        if (this.y < this.targetY) {
            this.y += this.speed; // Move down
        } else if (this.y > this.targetY) {
            this.y -= this.speed; // Move up
        }
    }
}
